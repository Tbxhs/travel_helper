<%= form_for(@plan,url: plan_path ,:html =>{:class => "form-horizontal well"}) do |f| %>
  <fieldset>
    <legend>编辑行程单</legend>
    
    <%= render :partial => 'plan_form', :locals => { :f => f } %>
    
    <div class="form-actions">
      <%= f.submit "保存",:class => "btn btn-primary" %>
      <%= link_to "添加行程安排",new_plan_plan_detail_path(@plan),:class=>"btn" if current_user%>
    </div>
  </fieldset>
<% end %>